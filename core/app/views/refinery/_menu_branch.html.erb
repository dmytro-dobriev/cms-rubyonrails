<%= content_tag(:li, :class => css ||= menu_branch_css(local_assigns)) do %>
  <%= link_to menu_branch.title, refinery.url_for(menu_branch.url) -%>
  <% if (children = menu_branch_children(menu_branch, local_assigns)).present? %>
    <%= content_tag(:ul, :class => 'clearfix') do %>
      <%= render :partial => '/refinery/menu_branch',
                 :collection => children,
                 :locals => local_assigns -%>
    <% end %>
  <% end -%>
<% end %>
