<%
  # Collect the root items.
  # ::Refinery::Menu is smart enough to remember all of the items in the original collection.
  if (roots = menu_roots(local_assigns)).present?
    css = local_assigns.delete(:css) || 'menu clearfix'
    dom_id = local_assigns.delete(:dom_id) || 'menu'
-%>
  <%= content_tag(:nav, :id => dom_id, :class => css) do %>
    <%= content_tag(:ul) do %>
      <%= render :partial => '/refinery/menu_branch',
                 :collection => roots,
                 :locals => local_assigns %>
    <% end -%>
  <% end -%>
<% end -%>
