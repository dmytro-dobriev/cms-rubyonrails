#!/usr/bin/env ruby
gem 'railties'
require 'rails/generators'
require 'rails/generators/rails/app/app_generator'
template_path = File.expand_path('../../templates/refinery/installer.rb', __FILE__)
puts "Generating your application using Rails..."
Rails::Generators::AppGenerator.start [ARGV.shift, '-m', template_path, '--skip-test-unit', '--skip-layout']
